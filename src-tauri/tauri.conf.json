{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skill Studio",
  "identifier": "com.skillstudio.app",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Skill Studio",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "../library": "library"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
